.archives-cates-nav
    overflow: hidden
    font-size: 14px
    margin-bottom: 15px
    height: 50px
    line-height: 50px
    overflow: hidden
    background: #fff
    &::-webkit-scrollbar
        display: none
    
    h3 
        float: left
        margin-right: 10px
        font-weight: normal
        color: #999

    ul
        float: left
        display: block
        white-space: nowrap
        height: 100%
        font-size: 0
        position: relative
        -webkit-overflow-scrolling: touch
        overflow-x: scroll
        overflow-y: hidden
        &::-webkit-scrollbar
            display: none
    li
        display: inline-block
        padding: 0 10px
        font-size: 14px
        margin: 10px 10px 10px 0
        height: 30px
        line-height:30px;
        cursor: pointer
        &.current
            color: #fff
            background: #777
    +mobile() {
        padding: 0 10px
        h3 {
            display: none
        }
        ul {
            float: none
        }
        li {
            margin-right: 15px
            &.current {
                color: $color-theme
                background: none
            }
        }
        font-size: 14px
        box-shadow: 0 1px 2px rgba(0,0,0,0.2)
    }

        