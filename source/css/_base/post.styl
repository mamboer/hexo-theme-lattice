.mod-post-list
  margin-right: -30px
  &:after
    content: ' '
    clear: both
    display: table
  +mobile() {
    margin-right: 0      
  }
  +desktop() {
    margin-right: -60px
  }
    
 .mod-post
    overflow: hidden
    background: #fff
    margin: 0 30px 30px 0
    box-sizing: border-box
    float: left
    width: 280px
    height: 204px
    transition: box-shadow 200ms
    &:hover
      box-shadow: 0 0 2px rgba(0,0,0,.2)
      & .mod-post-desc
        color: #646464
    & > a
      display: block
      
    &-cover
      position:relative
      display: block
      width: 100%
      height: 113px
      overflow: hidden
      & img
        display: block
        width: 100%
        
    &-info
      padding: 10px
      
    &-tit
      height: 24px
      margin-bottom: 5px
      overflow: hidden
      line-height: 24px
      font-size: 14px
      font-weight: bold
      white-space: nowrap
      text-overflow: ellipsis
      transition: color 200ms
      +mobile() {
         // font-size: 16px
      }
      
    &-desc
      height: 40px
      line-height: 20px
      font-size: 14px
      color: #999
      overflow: hidden
      text-overflow: ellipsis
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      word-wrap: break-word
      transition: color 200ms
      
    +mobile() {
        float: none
        width: auto
        height: auto
        margin: 0 15px 20px
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        &-cover {
          height: auto
        }
        
    }
    
    +desktop() {
        width: 320px
        height: 220px
        margin-right: 60px
        &-cover {
          height: 130px
        }
    }